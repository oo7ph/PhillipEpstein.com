/* absolute positioning */
.csstransforms 
    .container 
        position relative
    section
        position absolute
    .content
        position absolute
/*
 * Zoom Ratios
 */

.csstransforms 
    .intro
        vendor(transform, scale(1))
    .who-is
        vendor(transform, scale(.1666))
    .tech
        vendor(transform, scale(.0277))
    .ecommerce
        vendor(transform, scale(.00077160493))
    .scroller
    	height 4000px

.csstransitions .content {
  -webkit-transition: -webkit-transform 1s;
     -moz-transition:    -moz-transform 1s;
       -o-transition:      -o-transform 1s;
          transition:         transform 1s;
}
